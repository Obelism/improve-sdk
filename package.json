{
	"name": "@obelism/improve",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"test": "turbo run test",
		"test:ci": "turbo run test:ci",
		"lint-staged": "lint-staged",
		"clean": "turbo run clean",
		"format": "prettier --write --ignore-unknown ."
	},
	"devDependencies": {
		"lint-staged": "^15.2.9",
		"prettier": "^3.3.3",
		"turbo": "^2.0.12",
		"typescript": "^5.4.5"
	},
	"git": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.7.0",
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"@vercel/git-hooks": "^1.0.0"
	}
}
