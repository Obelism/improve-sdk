{
	"name": "@obelism/improve",
	"author": "Obelism <hello@obelism.studio> (https://www.obelism.studio)",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"test": "turbo run test",
		"test:ci": "turbo run test:ci",
		"lint-staged": "lint-staged",
		"clean": "turbo run clean",
		"format": "prettier --write --ignore-unknown .",
		"changeset": "changeset",
		"version": "changeset version",
		"publish-packages": "turbo run build && turbo run lint test && changeset publish"
	},
	"devDependencies": {
		"changeset": "^0.2.6",
		"lint-staged": "^15.2.9",
		"prettier": "^3.3.3",
		"turbo": "^2.0.14",
		"typescript": "^5.4.5"
	},
	"git": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.7.0",
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"dependencies": {
		"@changesets/cli": "^2.27.7",
		"@obelism/improve-sdk": "^0.1.1",
		"@obelism/improve-sdk-next": "^0.1.1",
		"@obelism/improve-sdk-react": "^0.1.1",
		"@vercel/git-hooks": "^1.0.0"
	}
}
